{
    "actorSpecification": 1,
    "name": "quick-instagram-profile-check",
    "title": "Instagram Profile Checker",
    "description": "Scrapes Instagram profiles",
    "version": "0.0.1",
    "storages": {
        "dataset": {
            "actorSpecification": 1,
            "title": "Instagram Profile Checker",
            "description": "",
            "views": {
                "profiles": {
                    "title": "Profiles",
                    "description": "",
                    "transformation": {
                        "fields": [
                            "fullName",
                            "profilePicUrl",
                            "#debug",
                            "username",
                            "postsCount",
                            "followersCount",
                            "followsCount",
                            "private",
                            "verified",
                            "isBusinessAccount",
                            "biography"
                        ]
                    },
                    "display": {
                        "component": "table",
                        "columns": [
                            {
                                "label": "Name",
                                "format": "textWithImage",
                                "field": "$fullName",
                                "imageUrlField": "$profilePicUrl"
                            },
                            {
                                "label": "Username",
                                "format": "link",
                                "field": "$#debug.request.url",
                                "textField": "$username"
                            },
                            {
                                "label": "Posts",
                                "format": "number",
                                "field": "postsCount"
                            },
                            {
                                "label": "Followers",
                                "format": "number",
                                "field": "followersCount"
                            },
                            {
                                "label": "Following",
                                "format": "number",
                                "field": "followsCount"
                            },
                            {
                                "label": "Private",
                                "format": "text",
                                "field": "private"
                            },
                            {
                                "label": "Verified",
                                "format": "text",
                                "field": "verified"
                            },
                            {
                                "label": "Business",
                                "format": "text",
                                "field": "isBusinessAccount"
                            },
                            {
                                "label": "Bio",
                                "format": "text",
                                "field": "biography"
                            }
                        ]
                    }
                },
                "posts": {
                    "title": "Posts",
                    "description": "",
                    "transformation": {
                      "fields": [
                        "displayUrl",
                        "caption",
                        "ownerFullName",
                        "ownerUsername",
                        "url",
                        "commentsCount",
                        "firstComment",
                        "likesCount",
                        "timestamp",
                        "queryTag"
                      ]
                    },
                    "display": {
                      "component": "table",
                      "columns": [
                        {
                          "label": "Post",
                          "format": "image",
                          "field": "$displayUrl"
                        },
                        {
                          "label": "Text",
                          "format": "text",
                          "field": "caption"
                        },
                        {
                          "label": "Post URL",
                          "format": "text",
                          "field": "url"
                        },
                        {
                          "label": "Number of comments",
                          "format": "text",
                          "field": "commentsCount"
                        },
                        {
                          "label": "First comment",
                          "format": "text",
                          "field": "firstComment"
                        },
                        {
                          "label": "Number of likes",
                          "format": "text",
                          "field": "likesCount"
                        },
                        {
                          "label": "Posted on",
                          "format": "text",
                          "field": "timestamp"
                        },
                        {
                          "label": "Author",
                          "format": "text",
                          "field": "ownerUsername"
                        }
                      ]
                    }
                  }        
            }
        }
    }
}